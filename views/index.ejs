<%- include("partials/header") %>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
      background: #f4f4f4;
    }

    h1 {
      text-align: center;
      color: #333;
    }

    .top-bar {
      display: flex;
      justify-content: flex-end;
      margin: 20px 0;
    }

    .btn {
      padding: 8px 14px;
      border-radius: 6px;
      font-size: 14px;
      text-decoration: none;
      display: inline-block;
      margin: 2px;
      color: white;
    }

    .add-btn {
      background: #007bff;
    }
    .add-btn:hover {
      background: #0056b3;
    }

    .edit {
      background: #28a745;
    }
    .edit:hover {
      background: #1e7e34;
    }

    .delete {
      background: #dc3545;
    }
    .delete:hover {
      background: #a71d2a;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
      background: white;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    th, td {
      padding: 12px;
      border-bottom: 1px solid #ddd;
      text-align: left;
    }

    th {
      background: #007bff;
      color: white;
    }

    tr:hover {
      background: #f1f1f1;
    }
  </style>

  <h1>Todo List</h1>

  <!-- Add Todo Button -->
  <div class="top-bar">
    <a href="/add-todo" class="btn add-btn">+ Add Todo</a>
  </div>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Created At</th>
        <th>Updated At</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <!-- Example static data, replace with backend loop -->
   <% todos.forEach(todo => { %>
  <tr>
    <td><%= todo.title %></td>
    <td><%= todo.description %></td>
    <td><%= todo.createdAt.toLocaleString() %></td>
    <td><%= todo.updatedAt.toLocaleString() %></td>
    <td>
      <a href="/update-todo?id=<%= todo._id %>" class="btn edit">Edit</a>
      <a href="/delete-todo?id=<%= todo._id %>" class="btn delete">Delete</a>
    </td>
  </tr>
<% }) %>

    </tbody>
  </table>
<%- include("partials/footer") %>
